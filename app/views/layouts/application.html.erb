<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do | name, msg| %>  <!--loop through messages created in controller -->
<ul>
 <li> <%= msg %> </li> <!-- display message created in flash[:notice]-->
</ul>
<% end %>

    <%= yield %>
  </body>
</html>
